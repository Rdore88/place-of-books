<h1>Books</h1>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>View Info</th>
      <th>Reservation</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %>  </td>
      <td><a href="books/<%= book.id %>/edit">Edit</a></td>
      <td><a href="/books/<%= book.id %>">View Info</a></td>
      <% if book.checked_out %>
        <td>Already Checked Out</td>
      <% else %>
        <td><a href="/reservations/<%= book.id %>/new">Reserve this book</a></td>
      <% end %>
      <td>
      <%= button_to "delete", {:controller => :books,
      :action => 'delete', :id => book.id }, :method => :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
